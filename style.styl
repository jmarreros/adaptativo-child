// General vars
color-principal = #0693e3 // 1426b8
fondo-principal = #ddefef
color-gray = #333
color-gray2 = #6e6e6e
color-gray3 = #3d3d3d;
color-gray4 = #444444;

font-principal = "Palanquin", sans-serif
font-secundaria = "Roboto", sans-serif
font-auxiliar = "Helvetica", sans-serif

// General
body
	background-color: fondo-principal

a, a:visited
	color color-gray
	
a
	&:hover, &:active
		color color-principal

// Logo
.custom-logo-link img
	max-width 160px


// Navigation
.main-navigation 
	ul ul li a 
		font-family font-principal
	.nav-menu 
		> li > a
			text-shadow none
			color color-gray
		> li.current-menu-item > a, 
		> li.current-menu-parent > a
			color color-gray
		> li.current-menu-item > a::after, 
		> li.current-menu-parent > a::after
			border-color color-principal
		> li > a:hover
			color color-principal

// Header
.site-main .entry-title a,
.site-main h1.page-title, 
.site-main h1.entry-title,
aside.widget-area .widget-title,
.pt-cv-title a,
.header-bottom h1, 
.header-bottom h2, 
.header-bottom h3, 
.header-bottom h4,
.home-header-bottom h1,
.home-header-bottom h2,
.home-header-bottom h3,
.home-header-bottom h4
	font-family font-principal
	font-weight normal
	text-shadow none

body .home-header-bottom 
	h1, h2
		color color-principal
		text-shadow 1px 1px 2px #eaf3f8
	h3, h4
		color color-gray2
		text-shadow none
		font-weight normal
	img
		box-shadow 0 0 20px #aab8c3

.container-header 
	> .row,
	.header-top > .row
		max-width 1240px
		min-width 360px
		margin auto


// Section title
.section-title
	font-family font-secundaria
	font-weight normal
	text-transform uppercase
	color color-principal
	font-size 1.5rem
	width 100%
	text-align center 
	border-bottom 1px dotted #1426b8
	line-height 0.1em
	margin 10px 0 20px
	margin-bottom 50px
	span 
		background #fff
		padding 0 10px


.btn.btn-main
	font-family font-auxiliar
	font-weight normal
	color white!important
	background-color color-principal
	display block
	text-shadow none
	max-width 400px
	font-size 1.3rem
	margin auto
	padding 10px 20px
	text-transform uppercase


// articles
body
	article
		font-size:1.1rem;
		
// home articles
.pt-cv-title
	a
		color color-gray
		font-size 1.7rem
		&:hover
			color:color-principal

.pt-cv-readmore.btn-success
	color #fff
	background-color color-principal
	border-radius 0
	padding 8px 16px
	border none
	&.active, &:active, &:hover
		background-color color-gray4!important
	
.pt-cv-pagination-wrapper
	text-align right

.pt-cv-wrapper .pagination 
	> .active > a:hover, > .active > a
		background-color white
		color color-gray
	> li > a
		border-radius 0!important
		color black
	> li > a:hover
		background-color color-principal
		color #fff



// Sidebar
aside 
	&.widget-area ul li a:hover
		color color-principal

// Footer
footer.site-footer
	background-color color-gray3


